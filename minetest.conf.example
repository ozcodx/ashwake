# This file contains settings of Ashwake that can be changed in minetest.conf.
# By default, all the settings are commented and not functional.
# Uncomment settings by removing the preceding #.

# Whether creative mode (fast digging of all blocks, unlimited resources) should
# be enabled. Not recommended for the authentic Ashwake experience.
#creative_mode = false

# Sets the behaviour of the inventory items when a player dies.
#   bones: Store items in a bone node but drop items if inside protected area.
#   drop: Drop items on the ground.
#   keep: Player keeps items.
#bones_mode = bones

# The time in seconds after which the bones of a dead player can be looted by
# everyone. 0 to disable.
#share_bones_time = 1200

# Inform player of condition and location of new bones.
#bones_position_message = true

# Whether fire should be enabled. Fire is an important survival mechanic in Ashwake.
#enable_fire = true

# Enable flame sound for atmosphere.
#flame_sound = true

# Whether lavacooling should be enabled.
#enable_lavacooling = true

# Environmental settings
# These settings control the day/night cycle and lighting
#time_speed = 72          # Default day-night cycle speed
#night_darkness = 0.1     # Dark nights for atmospheric effect
#day_time_speed = 72      # Default daytime speed 
#night_time_speed = 120   # Faster nights to increase challenge

# Whether the TNT mod should be enabled.
# Not part of the default Ashwake experience.
#enable_tnt = false

# The radius of a TNT explosion.
#tnt_radius = 3

# Whether to allow respawning in beds.
# Default value is true.
#enable_bed_respawn = true

# Whether players can skip night by sleeping.
# Setting to false makes nights more challenging.
#enable_bed_night_skip = true

# If enabled, fences and walls cannot be jumped over.
#enable_fence_tall = true

# If enabled, the 'weather' mod will control cloud parameters, shadow intensity,
# bloom and volumetric lighting.
# Enhances the atmospheric experience of Ashwake.
#enable_weather = true

# Player settings
#enable_damage = true     # Enable player damage for survival experience
#enable_hunger = true     # Enable hunger mechanic if the mod is present
#playeranimations = true  # Enable player animations for immersion

# Velrot Corruption Settings (if the mod is present)
# Controls how the Velrot corruption behaves in the world
#enable_velrot = true                # Enable Velrot corruption
#velrot_spread_speed = 1.0           # Controls how fast Velrot spreads (0.1-5.0)
#velrot_mob_intensity = 1.0          # Controls Velrot mob spawning intensity (0.1-5.0)
